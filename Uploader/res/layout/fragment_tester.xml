<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/window_pading" >

    <ImageView
        android:id="@+id/fragment_tester_imageview_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Image Missing"
        android:src="@drawable/image_missing" />

    <Button
        android:id="@+id/fragment_tester_button_upload"
        style="@style/style_button_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/window_pading"
        android:text="@string/fragment_tester_button_upload_text" />

</LinearLayout>
