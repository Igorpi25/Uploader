<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_preview_layout_dimming"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_light"
    android:padding="10dp" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/color_white"
	    android:clickable="true"
	    android:gravity="center"
	    android:orientation="vertical"
	    android:padding="@dimen/window_pading" >
	
	    <ImageView
	        android:id="@+id/fragment_preview_imageview_photo"
	        android:layout_width="200dp"
	        android:layout_height="200dp"
	        android:clickable="true"
	        android:contentDescription="Image Missing"
	        android:padding="3dp"
	        android:src="@drawable/image_missing" />
	
	    <Button
	        android:id="@+id/fragment_preview_button_done"
	        style="@style/style_button_dialog"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/window_pading"
	        android:text="@string/fragment_preview_button_done_text" />
	    
	    <Button
	        android:id="@+id/fragment_preview_button_back"
	        style="@style/style_button_dialog_alter"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/fragment_preview_button_back_text" />
	
	</LinearLayout>
	
</RelativeLayout>
